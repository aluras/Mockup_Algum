<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.aluras.mockupalgum">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Contas"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_contas"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.aluras.mockupalgum.MainActivity" />
        </activity>
        <activity
            android:name=".Grupos"
            android:label="@string/title_activity_grupos"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.aluras.mockupalgum.MainActivity" />
        </activity>
        <activity
            android:name=".EditGrupo"
            android:label="@string/title_activity_edit_grupo"
            android:parentActivityName=".Grupos"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.aluras.mockupalgum.Grupos" />
        </activity>
        <activity
            android:name=".EditConta"
            android:label="@string/title_activity_edit_conta"
            android:parentActivityName=".Contas"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.aluras.mockupalgum.Contas" />
        </activity>
        <activity
            android:name=".BaseActivity"
            android:label="@string/title_activity_base"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LancamentoGrupoActivity"
            android:label="@string/title_activity_lancamento_grupos"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.aluras.mockupalgum.MainActivity" />
        </activity>
        <activity
            android:name=".LancamentoValorActivity"
            android:label="@string/title_activity_lancamento_valor"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PlanejamentoActivity"
            android:label="@string/title_activity_planejamento"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ExtratoActivity"
            android:label="@string/title_activity_extrato"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SituacaoActivity"
            android:label="@string/title_activity_situacao"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
